@model IEnumerable<InventoryUI.Models.Dtos.RawMaterialsDtos.RawMaterialsDtos>



@{
    var a = ViewContext.HttpContext.Request.Query["isRoles"];
}
@if (ViewContext.HttpContext.Request.Query["isRoles"] == "Admin")
{
    <!-- Admin Dashboard Content -->
    <h1>Welcome to the Admin Dashboard</h1>
    <!-- Add admin-specific content here -->
    <div class="d-flex justify-content-between">
        <h1 class="mt-5" style="color: #ff5733;">Homepage</h1>
    </div>
    <div class="d-flex justify-content-between">
        <div class="d-flex justify-content-between">
            <h1 class="mt-3">Inventory</h1>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary btn-sm btn-log" asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </div>


    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-controller="RawMaterials" asp-action="Add">Add RawMaterials</a>
        <div>
            <a class="btn btn-secondary" asp-controller="PurchasedStocks" asp-action="Index">Purchased Stock History</a>
            <a class="btn btn-secondary" asp-controller="MovedStocks" asp-action="Index">Moved Stock History</a>
        </div>
    </div>
    <div>
        <p> </p>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Raw Material Id</th>
                <th>Raw Material Name</th>
                <th>Price</th>
                <th>Available Stocks</th>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var rawMaterial in Model)
            {
                <tr>
                    <td>@rawMaterial.RawMaterialId</td>
                    <td>@rawMaterial.RawMaterialName</td>
                    <td>@rawMaterial.Price</td>
                    <td>@rawMaterial.AvailableStocks</td>
                    <td>@rawMaterial.Description</td>
                    <td>
                        <a asp-controller="RawMaterials" asp-action="Edit" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Edit/Delete</a>
                    </td>
                    <td>
                        <a asp-controller="PurchasedStocks" asp-action="Add" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Buy Stocks</a>
                    </td>
                    <td>
                        <a asp-controller="MovedStocks" asp-action="Move" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Move Stocks</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else if (ViewContext.HttpContext.Request.Query["isRoles"] == "Staff")
{
    <h1>Welcome to the Staff Dashboard</h1>
    <div class="d-flex justify-content-between">
        <h1 class="mt-5" style="color: #ff5733;">Homepage</h1>
    </div>
    <div class="d-flex justify-content-between">
        <div class="d-flex justify-content-between">
            <h1 class="mt-3">Inventory</h1>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-secondary btn-sm btn-log" asp-controller="Auth" asp-action="Logout">Logout</a>
        </div>
    </div>


    <div class="d-flex justify-content-between">
    </div>
    <div>
        <p> </p>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Raw Material Id</th>
                <th>Raw Material Name</th>
                <th>Price</th>
                <th>Available Stocks</th>
                <th>Description</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var rawMaterial in Model)
            {
                <tr>
                    <td>@rawMaterial.RawMaterialId</td>
                    <td>@rawMaterial.RawMaterialName</td>
                    <td>@rawMaterial.Price</td>
                    <td>@rawMaterial.AvailableStocks</td>
                    <td>@rawMaterial.Description</td>
                   @*  <td>
                        <a asp-controller="RawMaterials" asp-action="Edit" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Edit/Delete</a>
                    </td> *@
                    <td>
                        <a asp-controller="PurchasedStocks" asp-action="Add" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Buy Stocks</a>
                    </td>
                    <td>
                        <a asp-controller="MovedStocks" asp-action="Move" asp-route-id="@rawMaterial.RawMaterialId" class="btn btn-light">Move Stocks</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <!-- Handle other scenarios or unauthorized access -->
    <h1>Unauthorized Access</h1>
}

