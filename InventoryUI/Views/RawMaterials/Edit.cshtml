@model InventoryUI.Models.Dtos.RawMaterialsDtos.RawMaterialsDtos



<h1 class="mt-3">Edit Raw Materials</h1>

@if(Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Raw Material ID</label>
            <input type="text" class="form-control" asp-for="RawMaterialId" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Raw Material Name</label>
            <input type="text" class="form-control" asp-for="RawMaterialName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Raw Material Price</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>
        <div class="mt-3">
            <label class="form-label">Available Stocks</label>
            <input type="text" class="form-control" asp-for="AvailableStocks" />
        </div>
        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>
        <div class="mt-3">
            <label class="form-label">Supplier Name</label>
            <input type="text" class="form-control" asp-for="Supplier" />
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" asp-controller="RawMaterials" asp-action="Delete" class="btn-danger">Delete</button>
        </div>
    </form>
}
