@model InventoryUI.Models.Dtos.RawMaterialsDtos.AddRawMaterialsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<h1 class="mt-3">Add Regions</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Raw Material Name</label>
        <input type="text" class="form-control" asp-for="RawMaterialName" />
    </div>
    <div class="mt-3">
        <label class="form-label">Raw Material Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div class="mt-3">
        <label class="form-label">Raw Material Available Stocks</label>
        <input type="text" class="form-control" asp-for="AvailableStocks" />
    </div>
    <div class="mt-3">
        <label class="form-label">Raw Material Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Raw Material Supplier</label>
        <input type="text" class="form-control" asp-for="Supplier" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
